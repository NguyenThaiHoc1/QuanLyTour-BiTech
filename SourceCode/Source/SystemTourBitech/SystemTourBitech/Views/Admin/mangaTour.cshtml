  $(function () {
	$('[data-mask]').inputmask()
	$('.select2').select2();
	$('.select3').select2();
    CKEDITOR.replace('editor1');
	CKEDITOR.replace('editor2');
	CKEDITOR.replace('editor3');
	$('#datepicker').datepicker({
      autoclose: true
    });
	$('#datepicker1').datepicker({
