        <tr>
          <th>Qty</th>
          <th>Tour Serial #</th>
          <th>Description</th>
          <th>Subtotal</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>@Model.SoLuong</td>
          <td>@Model.Tour.maTour</td>
          <td>@Model.Tour.titleTour</td>
          <td>@Model.TongChiPhi</td>
        </tr>
        </tbody>
      </table>
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->

  <div class="row">
    <!-- accepted payments column -->
    <div class="col-xs-12">
      <p class="lead">Amount Due ....</p>

      <div class="table-responsive">
        <table class="table">
          <tr>
            <th style="width:50%">Subtotal:</th>
            <td>$@Model.TongChiPhi</td>
          </tr>
          <tr>
            <th>Đặt Cọc (30%)</th>
            <td>$@Model.DatCoc</td>
          </tr>
          <tr>
            <th>Create Date:</th>
            <td>@Model.NgayTao</td>
          </tr>
          <tr>
            <th>Rest of payment tour:</th>
            <td>$@((@Model.TongChiPhi - @Model.DatCoc).ToString())</td>
          </tr>
        </table>
      </div>
    </div>
