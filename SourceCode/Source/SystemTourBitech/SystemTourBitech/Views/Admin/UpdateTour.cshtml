@model SystemTourBitech.Models.UpdateTourView
 
@{
    ViewBag.Title = "UpdateTour";
    Layout = "~/Views/Shared/Admin/_LayoutAdminInside.cshtml";
}

<link rel='stylesheet prefetch' href="/Assets/Admin/fileupload.css">

<section class="content-header">
  <h1>
    System Tour
    <small>Control Tour System</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
	<li><a href="#"><i class="fa fa-dashboard"></i>Manage Tour</a></li>
    <li class="active">Update Tour</li>
  </ol>
</section>


<section class="content">

                <div class="box">
                    <div class="box-header with-border">
                      <h3 class="box-title">Preview information Tour</h3>
                      <div class="box-tools">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                        </button>
                      </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding" style="margin: 20px 20px;">

                            <div class="row">
                            <div class="col-md-6">
                              <div class="box box-solid">
                                <div class="box-header with-border">
                                  <h3 class="box-title">Preview</h3>
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body">
                                  <div class="box-group" id="accordion">
                                    <!-- we are adding the .panel class so bootstrap.js collapse plugin detects it -->
                                    <div class="panel box box-primary">
                                      <div class="box-header with-border">
                                        <h4 class="box-title">
                                          <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                            Thông tin giá
                                          </a>
                                        </h4>
                                      </div>
                                      <div id="collapseOne" class="panel-collapse collapse in">
                                        <div class="box-body">

											@Html.Raw(@Model.getinfor.thongtingia)
                                           
                                        </div>
                                      </div>
                                    </div>
                                    <div class="panel box box-danger">
                                      <div class="box-header with-border">
                                        <h4 class="box-title">
                                          <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                                            Thông tin lịch trình
                                          </a>
                                        </h4>
                                      </div>
                                      <div id="collapseTwo" class="panel-collapse collapse">
                                        <div class="box-body">

                                            @Html.Raw(Model.getinfor.thongtinlichtrinh)
											
                                        </div>
                                      </div>
                                    </div>
                                    <div class="panel box box-success">
                                      <div class="box-header with-border">
                                        <h4 class="box-title">
                                          <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                                             Thông tin chính sách
                                          </a>
                                        </h4>
                                      </div>
