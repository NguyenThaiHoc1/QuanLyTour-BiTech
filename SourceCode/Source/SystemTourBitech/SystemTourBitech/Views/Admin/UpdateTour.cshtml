                                        <div class="box-body">

                                            @Html.Raw(Model.getinfor.thongtinchinhsach)
											
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                                <!-- /.box-body -->
                              </div>
                              <!-- /.box -->

                               <div class="box box-success">
                                        <div class="box-header">
                                          <i class="fa fa-comments-o"></i>

                                          <h3 class="box-title">Vehicle</h3>


                                        </div>
                                        <div class="box-body chat" id="chat-box">
                                          <!-- chat item -->
                                          <table class="table table-hover" id="dev-table">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Tên Phương Tiện</th>
                                                        <th>Slot</th>
                                                        <th>Biển Số Xe</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
									                @foreach(var phuongtien in Model.getinfor.PhuongTiens)
									                {
									                <tr>
                                                        <td>@phuongtien.maPhuongTien</td>
                                                        <td>@phuongtien.tenPhuongTien</td>
                                                        <td>@phuongtien.SoChoNgoi</td>
                                                        <td>@phuongtien.BienSoXe</td>
                                                    </tr>
									                }
                                                    
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.chat -->

                                </div>
                                <!-- /.box (chat box) -->
                            </div>
                            <!-- /.col -->
                            <div class="col-md-6">
                              <div class="box box-solid">
                                <div class="box-header with-border">
                                  <h3 class="box-title">Hình ảnh</h3>
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body">
                                  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                      <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                                      <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                                    </ol>
                                    <div class="carousel-inner">
                                      <div class="item active">
                                        <img src=@("/Images/Tour/" + Model.getinfor.hinhanh1) alt="First slide">

                                        <div class="carousel-caption">
                                          First Slide
                                        </div>
                                      </div>
                                      <div class="item">
                                        <img src=@("/Images/Tour/" + Model.getinfor.hinhanh2) alt="Second slide">

                                        <div class="carousel-caption">
                                          Second Slide
                                        </div>
                                      </div>
                                      <div class="item">
                                        <img src=@("/Images/Tour/" + Model.getinfor.hinhanh3) alt="Third slide">

                                        <div class="carousel-caption">
                                          Third Slide
                                        </div>
                                      </div>
                                    </div>
                                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                      <span class="fa fa-angle-left"></span>
                                    </a>
                                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                      <span class="fa fa-angle-right"></span>
                                    </a>
                                  </div>
                                </div>
                                <!-- /.box-body -->
                              </div>
                              <!-- /.box -->
                            </div>
                            <!-- /.col -->
					    
					</div>
				 </div>
    </div>


     <div class="box">
            <div class="box box-primary">
                <div class="box box-solid">
                    <div class="box-header with-border">
                      <h3 class="box-title">Preview information Tour</h3>
                      <div class="box-tools">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                        </button>
                      </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding" style="margin: 20px 20px;">
						     <div class="row">
        <div class="col-md-12">


                <form role="form" id="" action="/Admin/UpdateTour" method="post" enctype = "multipart/form-data">
                  <div class="box-body">
                    <div class="col-md-6"> 

                        <div class="form-group">
                          <label for="maCodeTour">Mã Code Tour</label>
                          <input type="text" class="form-control" id="maCodeTour" name="maCodeTour" placeholder="Code Tour" value=@(Model.getinfor.maTour)>
                        </div>
                            
                        <div class="form-group">
                          <label for="titletour">Title Tour</label>
                          <input type="text" class="form-control" id="titletour" name="titletour" placeholder="Title Tour" value=@(Model.getinfor.titleTour)>
                        </div>

                        <div class="form-group">
                          <label for="startpostion">Địa điểm khởi hành</label>
                          <input type="text" class="form-control" id="startpostion" name="startpostion" placeholder="Địa điểm khởi hành" value=@(Model.getinfor.DiaDiemKhoiHanh)>
                        </div>

                        <div class="form-group">
                          <label for="startend">Điểm đến</label>
                          <input type="text" class="form-control" id="startend" name="startend" placeholder="Điểm đến" value=@(Model.getinfor.DiaDiemDen)>
                        </div>

                        <div class="form-group">
                                <label>Phương tiện</label>
                                <select class="form-control select2" multiple="multiple" data-placeholder="Chọn các phương tiện"
                                        style="width: 100%;" name="selectVehicle">
                                        @foreach(var phuongtien in Model.phuongtiendichuyen)
										{
										    <option value="@phuongtien.idPhuongTien" style="color:black;">@phuongtien.tenPhuongTien</option>
										}

                                </select>
                        </div>

                        <div class="form-group">
                          <label>Dịch vụ</label>
                                <select class="form-control select3" multiple="multiple" data-placeholder="Chọn các dịch vụ"
                                        style="width: 100%;" name="selectServies">
                                        @foreach(var dichvu in Model.dichvuphucvu)
                                        {
                                            <option value="@dichvu.idDichVu" style="color:black;">@dichvu.MaDichVu</option>
                                        }
                                </select>
                        </div>

                        <div class="form-group">
                                <label for="vehiclename">Ngày bắt đầu</label>
                                <div class="input-group date">
                                  <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                  </div>
                                  <input type="text" class="form-control pull-right" id="datepicker" name="startDate" value=@(Model.getinfor.StartDate)>
                                </div>
                        </div>

                        
                            
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                          <label for="nhacungcap">Tên nhà cung cấp</label>
                          <input type="text" class="form-control" id="nhacungcap" name="nhacungcap" placeholder="Nhà cung cấp" value=@Html.Raw(@Model.getinfor.TenNhaCungCap)>
											
                        </div>

                        <div class="form-group">
                          <label for="address">Địa chỉ</label>
                          <input type="text" class="form-control" id="address" name="address" placeholder="Address" value=@(Model.getinfor.DiaChi)>
                        </div>

                        <div class="form-group">
                          <label for="phoneNumber">Số điện thoại</label>
                          <input type="text" class="form-control" data-inputmask="&quot;mask&quot;: &quot;(999) 999-9999&quot;" data-mask="" name="phoneNumber" value=@(Model.getinfor.phonenumber)>
                        </div>
                            
                        <div class="form-group">
                          <label for="vehiclename">Giá đặt ngay</label>
                          <input type="number" min="0.00" step="0.05"  id="exampleInputAmount" class="form-control" placeholder="Price" name="pricemoney" value=@(Model.getinfor.GiaDatNgay)>
                        </div>

                        <div class="form-group">
                            <label>Status</label>
                            <select class="form-control select2" style="width: 100%; height: 35px;" name="SelectRole">
                                    <option value="1">ACTIVE</option>
                                    <option value="2">NOT ACTIVE</option>
                                    <option value="3">MAINTENACE</option>
                            </select>
                        </div>

                        <div class="form-group">
                          <label for="vehiclename">Ngày kết thúc</label>
                          <div class="input-group date">
                                  <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                  </div>
                                  <input type="text" class="form-control pull-right" id="datepicker1" name="dateEnd" value=@(Model.getinfor.EndDate)>
                           </div>
                        </div>
                        
                    </div>

                    <div class="col-md-12">
                         <label for="vehiclename">Hình mô tả 1</label>
                         <div class="input-group image-preview1">
                                <input type="text" class="form-control image-preview-filename1" disabled="disabled"> <!-- don't give a name === doesn't send on POST/GET -->
                                <span class="input-group-btn">
                                    <!-- image-preview-clear button -->
                                    <button type="button" class="btn btn-default image-preview-clear1" style="display:none;">
                                        <span class="glyphicon glyphicon-remove"></span> Clear
                                    </button>
                                    <!-- image-preview-input -->
                                    <div class="btn btn-default image-preview-input1">
                                        <span class="glyphicon glyphicon-folder-open"></span>
                                        <span class="image-preview-input-title1">Browse</span>
                                        <input type="file" accept="image/png, image/jpeg, image/gif" name="input-file-preview2"/> <!-- rename it -->
                                    </div>
                                </span>
                            </div><!-- /input-group image-preview [TO HERE]--> 

                             <label for="vehiclename">Hình mô tả 2</label>
                             <div class="input-group image-preview2">
                                <input type="text" class="form-control image-preview-filename2" disabled="disabled"> <!-- don't give a name === doesn't send on POST/GET -->
                                <span class="input-group-btn">
                                    <!-- image-preview-clear button -->
                                    <button type="button" class="btn btn-default image-preview-clear2" style="display:none;">
                                        <span class="glyphicon glyphicon-remove"></span> Clear
                                    </button>
                                    <!-- image-preview-input -->
                                    <div class="btn btn-default image-preview-input2">
                                        <span class="glyphicon glyphicon-folder-open"></span>
                                        <span class="image-preview-input-title2">Browse</span>
                                        <input type="file" accept="image/png, image/jpeg, image/gif" name="input-file-preview1"/> <!-- rename it -->
                                    </div>
                                </span>
                            </div><!-- /input-group image-preview [TO HERE]--> 
                            <label for="vehiclename">Hình mô tả 3</label>
                            <div class="input-group image-preview">
                                
                                <input type="text" class="form-control image-preview-filename" disabled="disabled"> <!-- don't give a name === doesn't send on POST/GET -->
                                <span class="input-group-btn">
                                    <!-- image-preview-clear button -->
                                    <button type="button" class="btn btn-default image-preview-clear" style="display:none;">
                                        <span class="glyphicon glyphicon-remove"></span> Clear
                                    </button>
                                    <!-- image-preview-input -->
                                    <div class="btn btn-default image-preview-input">
                                        <span class="glyphicon glyphicon-folder-open"></span>
                                        <span class="image-preview-input-title">Browse</span>
                                        <input type="file" accept="image/png, image/jpeg, image/gif" name="input-file-preview"/> <!-- rename it -->
                                    </div>
                                </span>
                            </div><!-- /input-group image-preview [TO HERE]--> 
                             
                    </div>

                  </div>
                  <!-- /.box-body -->

                  <section class="content">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="box box-info">
                            <div class="box-header">
                              <h3 class="box-title">Thông tin giá
                                <small></small>
                              </h3>
                              <!-- tools box -->
                              <div class="pull-right box-tools">
                                <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                  <i class="fa fa-minus"></i></button>
                                <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip"
                                        title="Remove">
                                  <i class="fa fa-times"></i></button>
                              </div>
                              <!-- /. tools -->
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body pad">
                                    <textarea id="editor1" name="editor1" rows="10" cols="80" >
														@Model.getinfor.thongtingia
                                    </textarea>
                            </div>
                          </div>
                          <!-- /.box -->
                        </div>
                        <!-- /.col-->
                      </div>
                      <!-- ./row -->



                      <div class="row">
                        <div class="col-md-12">
                          <div class="box box-info">
                            <div class="box-header">
                              <h3 class="box-title">Lịch trình
                                <small></small>
                              </h3>
                              <!-- tools box -->
                              <div class="pull-right box-tools">
                                <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                  <i class="fa fa-minus"></i></button>
                                <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip"
                                        title="Remove">
                                  <i class="fa fa-times"></i></button>
                              </div>
                              <!-- /. tools -->
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body pad">
                                    <textarea id="editor2" name="editor2" rows="10" cols="80" >
														@Model.getinfor.thongtinlichtrinh
                                    </textarea>
                            </div>
                          </div>
                          <!-- /.box -->
                        </div>
                        <!-- /.col-->
                      </div>
                      <!-- ./row -->
                <!-- /.content -->

                      <div class="row">
                        <div class="col-md-12">
                          <div class="box box-info">
                            <div class="box-header">
                              <h3 class="box-title">Chính sách
                                <small></small>
                              </h3>
                              <!-- tools box -->
                              <div class="pull-right box-tools">
                                <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                  <i class="fa fa-minus"></i></button>
                                <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip"
                                        title="Remove">
                                  <i class="fa fa-times"></i></button>
                              </div>
                              <!-- /. tools -->
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body pad">
                                    <textarea id="editor3" name="editor3" rows="10" cols="80" >
														@Model.getinfor.thongtinchinhsach
                                    </textarea>
                            </div>
                          </div>
                          <!-- /.box -->
                        </div>
                        <!-- /.col-->
                      </div>
                      <!-- ./row -->
                      <button type="submit" class="btn btn-primary">Add</button>

                  </section>
            </form>
        </div>
      </div>
                    </div>
				</div>
			</div>
	 </div>

    </div>



</section>

