
<form role="form" id="addVehicle" action="/Admin/addVehicle" method="post">
  <div class="box-body">
    <div class="col-md-6"> 

        <div class="form-group">
          <label for="codevehicle">Code Vehicle</label>
          <input type="text" class="form-control" id="codevehicle" name="codevehicle" placeholder="Code Vehicle">
        </div>

		<div class="form-group">
          <label for="vehiclename">Vehicle Name</label>
          <input type="text" class="form-control" id="vehiclename" name="vehiclename" placeholder="Vehicle Name">
        </div>
			
    </div>

	<div class="col-md-6">
    	<div class="form-group">
          <label for="license">License Plate</label>
          <input type="text" class="form-control" id="license" name="license" placeholder="License">
        </div>

		<div class="form-group">
            <label>Status</label>
            <select class="form-control select2" style="width: 100%; height: 35px;" name="SelectRole">
                    <option value="1">ACTIVE</option>
					<option value="2">NOT ACTIVE</option>
					<option value="3">MAINTENACE</option>
            </select>
        </div>
    </div>

  </div>
  <!-- /.box-body -->
  <div class="box-footer">
    <button type="submit" class="btn btn-primary">Add</button>
  </div>
</form>




<!-- Form JS -->
<script src="/Assets/Admin/plugins/input-mask/jquery.inputmask.js"></script>
<script src="/Assets/Admin/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
<script src="/Assets/Admin/plugins/input-mask/jquery.inputmask.extensions.js"></script>
<script src="/Assets/Admin/bower_components/select2/dist/js/select2.full.min.js"></script>
<script src="/Assets/Admin/jquery.validate.js"></script>
<script>
  $(function () {

    $('.select2').select2()
    $.validator.addMethod("noSpace", function(value, element) {
    return value.indexOf(" ") < 0 && value != "";
    }, "No space please and don't leave it empty");


    $('#addVehicle').validate({
        rules: {
          codevehicle: {
            required: true,
            noSpace: true,
            minlength: 10,
	        remote: {
                    url: "/Admin/codevehicle",
                    type: "post",
                    data:{
                              codevehicle: function()
                              {
                                  return $('#addVehicle :input[name="codevehicle"]').val();
                              }
                          }
                }
         },
         vehiclename: {
                required: true,
                minlength: 5
           },
         license: {
                required: true,
                minlength: 10,
                noSpace: true,
                remote: {
                    url: "/Admin/licenseplate",
                    type: "post",
                    data:{
                              license: function()
                              {
                                  return $('#addVehicle :input[name="license"]').val();
                              }
                          }
                }
           }
        }, 
        messages: {
            codevehicle: {
                required: "Please enter your email",
                email: "syntax email is incorrect !",
	            noSpace: "No space in this string ! Please try again",
	            remote: jQuery.validator.format("{0} is already taken.")
            },
            vehiclename: {
                required: "Please enter your name",
                minlength: "Fullname must consist of at least 3 characters"
            },
            license: {
                required: "Please enter your username",
                minlength: "Username must consist of at least 5 characters",
	            noSpace: "No space in this string ! Please try again",
                remote: jQuery.validator.format("{0} is already taken.")
            }
        },
        highlight: function (element) {
            $(element).parent().removeClass('has-success')
            $(element).parent().addClass('has-error')
        },
        unhighlight: function (element) {
            $(element).parent().removeClass('has-error')
            $(element).parent().addClass('has-success')
        }
    });

	
    $('[data-mask]').inputmask();
  })
</script>