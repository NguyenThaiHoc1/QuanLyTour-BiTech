@model PagedList.IPagedList<Core.Model.HopDongDangKyTour>
@using PagedList.Mvc;

@{
    ViewBag.Title = "ManageHopDongKhachHang";
    Layout = "~/Views/Shared/Admin/_LayoutAdminInside.cshtml";
}


<section class="content-header">
  <h1>
    Manage Contract
    <small>Control Contract System</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    <li class="active">Manage Contract</li>
  </ol>
</section>



<section class="content">
                <div class="box">
                    <div class="box-header with-border">
                            <form action="/Admin/ManageHopDongKhachHang" method="get">
                                <div class="input-group">
                                    <div class="input-group-btn search-panel">
                                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                                <select class="" name="sortOrder">
                                                  <option data-tokens="ketchup mustard" value="fullthings">ALL</option>
                                                  <option data-tokens="mustard" value="maHD">MÃ HỢP ĐỒNG</option>
                                                  <option data-tokens="frosting" value="tenKH">TÊN KHÁCH HÀNG</option>
                                                  <option data-tokens="frosting" value="maTOUR">MÃ TOUR</option>
                                                </select>
                                        </button>


                                        
                                    </div>
                                    <input type="hidden" name="search_param" value="all" id="search_param">         
                                    <input type="text" class="form-control" id="SearchString" name="SearchString" placeholder="Search term...">
                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-default" ><span class="glyphicon glyphicon-search"></span></button>
                                    </span>
                                </div>
                            </form>
                    </div>
               </div>



            <div class="box">
                <div class="box-header">
                        <h3 class="box-title">Contract</h3>


                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <table class="table table-striped custab">
                                <thead>
                                    <tr>
                                        <th>MÃ HỢP ĐỒNG</th>
						                <th>MÃ TOUR</th>
						                <th>TÊN KHÁCH HÀNG</th>
                                        <th>TỔNG CHI PHÍ</th>
                                        <th>ĐẶT CỌC</th>
                                        <th>NGÀY KHỞI TẠO</th>
						                <th>NHÂN VIÊN LẬP</th>
                                        <th class="text-center">Feature</th>
                                    </tr>
                                </thead>
				                    @foreach(var hopdong in Model)
				                    {
                                        <td>@hopdong.MaHopDong</td>
                                        <td>@hopdong.Tour.maTour</td>
                                        <td>@hopdong.KhachHang.TenKH</td>
                                        <td>@hopdong.TongChiPhi</td>
                                        <td>@hopdong.DatCoc</td>
                                        <td>@hopdong.NgayTao</td>
                                        <td>@hopdong.NhanVien.HoTen</td>
                                        <td class="text-center">
                                           <a class='btn btn-info btn-xs' href=@(String.Format("/Admin/CreateHopDongDangKyTour?maHopDong={0}", hopdong.MaHopDong))><i class="fa fa-download" aria-hidden="true"></i>Generate PDF</a>
                                           <a class='btn btn-danger btn-xs' href="#"><i class="fa fa-credit-card-alt" aria-hidden="true"></i>Payment</a>
                                           <a class='btn btn-warning btn-xs' href="#"><i class="fa fa-pencil" aria-hidden="true"></i>Edit</a>
				                        </td>
				                    }
                                         
                                        

                          </table>
                         <br />
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                            @Html.PagedListPager(Model, page => Url.Action("ManageHopDongKhachHang", 
                                new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                    
                </div>
            </div>


           
    
</section>


<script>

</script>